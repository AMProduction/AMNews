BEGIN;
CREATE ROLE dbuser1 LOGIN
  ENCRYPTED PASSWORD 'md5f1a0c082ea45019a8ea07c0fb142e45f'
  SUPERUSER INHERIT CREATEDB CREATEROLE NOREPLICATION;
CREATE DATABASE "AMNews"
  WITH OWNER = dbuser1
       ENCODING = 'UTF8'
       TABLESPACE = pg_default
       LC_COLLATE = 'uk_UA.UTF-8'
       LC_CTYPE = 'uk_UA.UTF-8'
       CONNECTION LIMIT = -1;
CREATE SEQUENCE auto_id_news
  INCREMENT 1
  MINVALUE 1
  MAXVALUE 9223372036854775807
  START 24
  CACHE 1;
CREATE TABLE "News"
(
  id bigint NOT NULL DEFAULT nextval('auto_id_news'::regclass),
  subject character varying NOT NULL,
  text_presenter character varying,
  text_news character varying NOT NULL,
  created_date timestamp without time zone,
  last_modified_date timestamp without time zone,
  CONSTRAINT "News_pkey" PRIMARY KEY (id)
)
COMMIT;
